<% if admin? %>
  <h2>Manage bids</h2>
  <div class="row">
    <% @bids.each do |bid| %>
      <div class="col-lg-4">
        <%= render 'bid_card', bid: %>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="mx-2 mb-4">
    <h3>Your recently submitted bids</h3>
    <% if @recent_bids.empty? %>
      <p class="text-muted"> You have not submitted any bids </p>
    <% else %>
      <div class="row">
        <% @recent_bids.each do |bid| %>
          <div class="col-lg-4">
            <%= render 'bid_card', bid: %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <hr>
  <div>
    <%= link_to 'Search for projects to bid', search_projects_path, class: "btn btn-primary" %>
  </div>
<% end %>
