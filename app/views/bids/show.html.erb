<div class="mx-2 my-3">
  <h1 class="mb-3"><%= @bid.bid_name %></h1>
  <h5 class="text-muted mb-3"><%= @bid.bid_description %></h5>
  <hr>
  <dl class="row mb-3">
    <dt class="col-sm-3">Amount:</dt>
    <dd class="col-sm-9"><%= @bid.bid_amount %></dd>
    <dt class="col-sm-3">Status:</dt>
    <dd class="col-sm-9"><%= @bid.bid_status %></dd>
    <dt class="col-sm-3">Project:</dt>
    <dd class="col-sm-9"><%= link_to @bid.project.title, @bid.project, class: 'text-decoration-none text-white btn btn-primary' %></dd>
    <dt class="col-sm-3">By:</dt>
    <dd class="col-sm-9"><%= @bid.username %></dd>
  </dl>
  <hr>
  <% if (current_user == @bid.user || admin?) && @bid.modifiable? %>
    <%= link_to edit_bid_path(@bid), class: "btn btn-primary mt-2" do %>
      Edit this bid <i class="bi bi-pencil"></i>
    <% end %>
  <% end %>
</div>
