<%= render 'shared/flash' %>
<div class="mx-2">
  <h2>Edit your bid</h2>
  <%= form_with model:@bid do |f| %>
    <%= f.label :bid_name %><br>
    <%= f.text_field :bid_name %><br>
    <br>
    <%= f.label :bid_description %><br>
    <%= f.text_area :bid_description %><br>
    <br>
    <%= f.label :bid_amount %><br>
    <%= f.number_field :bid_amount, step: '0.01', min: '0', max: '999999.99' %><br>
    <br>
    <%= f.submit "Update", class: "btn btn-primary" %>
  <% end %>
</div>
