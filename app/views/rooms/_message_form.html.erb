<%= form_with(model: [ room, Message.new ], local: true, remote: true, id: "message-form", class: "mb-3 mt-1") do |f| %>
  <div class="input-group">
    <%= f.text_field :content, class: "form-control", placeholder: "Type your message" %>
    <div class="input-group-append mx-3">
      <%= f.button :submit, class: "btn btn-primary" do %>
        <i class="bi bi-arrow-right-square-fill"></i>
      <% end %>
    </div>
    <%= f.hidden_field :room_id, value: room.id %>
  </div>
<% end %>