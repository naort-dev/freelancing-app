<%= form_with url: search_path, method: :get, local: true, class: 'mb-4' do |form| %>
  <div class="mb-3">
    <%= form.label :search, 'Search by category:', class: 'form-label' %>
    <div class="col-sm-6">
      <%= form.text_field :search, class: 'form-control' %>
    </div>
  </div>
  <div class="form-check">
    <%= radio_button_tag :filter, 'all', params[:filter].nil? || params[:filter] == 'all' %>
    <%= label_tag :filter_all, 'Search from all projects', class: 'form-check-label' %>
  </div>
  <div class="form-check">
    <%= radio_button_tag :filter, 'unawarded', params[:filter] == 'unawarded' %>
    <%= label_tag :filter_unawarded, 'Search only from projects that are not awarded', class: 'form-check-label' %>
  </div>
  <div class="mt-3">
    <%= form.submit 'Search', class: 'btn btn-primary' %>
  </div>
<% end %>
