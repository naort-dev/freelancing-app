<%= form_with url: search_path, method: :get, local: true, class: 'mb-4' do |form| %>
  <div class="mb-3">
    <%= form.label :search, 'Search by category:', class: 'form-label' %>
    <div class="col-sm-6">
      <%= form.select :search, Category.all.collect {|c| [c.name, c.name]}, {prompt: params[:search].present? ? params[:search] : 'Select a category'}, class: 'form-control' %>
    </div>
  </div>
  <div class="mt-3">
    <%= form.submit 'Search', class: 'btn btn-primary' %>
  </div>
<% end %>
