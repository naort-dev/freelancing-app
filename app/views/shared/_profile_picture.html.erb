<% if user.profile_picture.attached? %>
  <%= image_tag user.profile_picture, alt: 'Profile picture', size: '320x320', class: "img-thumbnail mx-auto d-block my-3" %>
<% else %>
  <%= image_tag 'https://picsum.photos/id/91/240', alt: 'Profile picture', size: '240x240', class: "img-thumbnail mx-auto d-block my-3" %>
<% end %>
