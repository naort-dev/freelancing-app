<% if user.profile_picture.attached? %>
  <%= image_tag user.profile_picture, alt: 'Profile picture', size: size, class: "img-thumbnail mx-auto d-block my-3" %>
<% else %>
  <%= image_tag 'https://www.weact.org/wp-content/uploads/2016/10/Blank-profile.png', alt: 'Profile picture', size: size, class: "img-thumbnail mx-auto d-block my-3" %>
<% end %>
