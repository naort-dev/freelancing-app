<%= form_with url: search_users_path, method: :get, local: true do |form| %>
  <%= form.label :search, 'Search freelancers by category:' %>
  <%= form.text_field :search %>
  <%= form.submit 'Search' %>
<% end %>
<br>
<% @users.each do |u| %>
  <p><%= u.email%> <%= u.role %></p>
  <% u.categories.each do |cat| %>
    <span><%= cat.name %> </span>
  <% end %>
  <hr>
<% end %>
