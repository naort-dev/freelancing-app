<%= render 'shared/profile_picture', user: @user, size: '320x320' %>
<div class="mt-5">
  <div class="card shadow-sm mb-5 bg-white rounded">
    <div class="card-header bg-secondary text-white text-center pt-2">
      <h2 class="mb-0 mt-1"><%= @user.role.capitalize %> Profile</h2>
    </div>
    <div class="card-body pb-0 px-0">
      <% [['Username', @user.username], ['Email', @user.email], ['Industry', @user.industry], ['Visibility', @user.visibility_status]].each do |label, value| %>
        <div class="row text-center my-1">
          <div class="col fs-3"><%= label %></div>
          <div class="col fs-3"><%= value %></div>
        </div>
      <% end %>
      <div>
        <% if freelancer? %>
          <% [['Qualification', @user.qualification], ['Experience', @user.experience]].each do |label, value| %>
            <div class="row text-center my-1">
              <div class="col fs-3"><%= label %></div>
              <div class="col fs-3"><%= value %></div>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="card-footer text-muted">
        Member since <%= @user.created_at.strftime("%d %B %Y") %>
      </div>
    </div>
  </div>
</div>
<% if current_user == @user %>
  <%= link_to edit_user_path(@user), class: "btn btn-primary" do %>
    Edit <i class="bi bi-pencil"></i>
  <% end %>
<% end %>
