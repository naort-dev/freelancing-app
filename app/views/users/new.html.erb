<%= render 'shared/flash' %>
<h1 class="text-center my-4">Register now!</h1>
<div class="d-flex justify-content-center">
  <%= form_with model: @user, url: users_path do |f| %>
    <div class="mb-3">
      <%= f.label :username, class: 'form-label' %>
      <%= f.text_field :username, class: 'form-control' %>
      <% if @user.errors[:username].any? %>
        <% @user.errors[:username].each do |error| %>
          <div class="text-danger mt-2" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <%= error.capitalize %>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="mb-3">
      <%= f.label :email, class: 'form-label' %>
      <%= f.email_field :email, class: 'form-control' %>
      <% if @user.errors[:email].any? %>
        <% @user.errors[:email].each do |error| %>
          <div class="text-danger mt-2" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <%= error.capitalize %>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="mb-3">
      <%= f.label :password, class: 'form-label' %>
      <%= f.password_field :password, class: 'form-control' %>
      <% if @user.errors[:password].any? %>
        <% @user.errors[:password].each do |error| %>
          <div class="text-danger mt-2" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <%= error.capitalize %>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="mb-3">
      <%= f.label :password_confirmation, class: 'form-label' %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      <% if @user.errors[:password_confirmation].any? %>
        <% @user.errors[:password_confirmation].each do |error| %>
          <div class="alert alert-danger mt-2" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <%= error.capitalize %>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="mb-3">
      <%= f.label :role, class: 'form-label' %>
      <%= select(:user, :role, [['Client', 'client'], ['Freelancer', 'freelancer']], {}, { class: 'form-select' }) %>
    </div>
    <%= f.submit "Sign up", class: 'btn btn-primary' %>
  <% end %>
</div>
